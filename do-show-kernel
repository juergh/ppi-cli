#!/bin/bash -eu
#
# Show kernel information
#

. ./lib.sh

do_run_parallel target-pi-cli "${ARGS[@]}" "${RPI_MASTER}" {} info "${SUB_ARGS[@]}"

echo
echo "-- Kernel versions:"
for host in "${HOSTS[@]}" ; do
	kernel=$(awk '$1 == "\"Kernel\":" { print $4 " " $5 }' "${host}".log)
	printf "%-25s: %s\n" "${host}" "${kernel}"
done
